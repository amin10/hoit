<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.att.iothub" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <service
            android:name="com.att.iothub.ti.ble.common.BluetoothLeService"
            android:enabled="true" />
        <activity
            android:name=".Hub"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.att.iothub.ti.ble.sensortag.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.att.iothub.ti.ble.sensortag.DeviceActivity"
            android:parentActivityName="com.att.iothub.ti.ble.sensortag.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.att.iothub.ti.ble.sensortag.FwUpdateActivity"
            android:parentActivityName="com.att.iothub.ti.ble.sensortag.DeviceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.att.iothub.ti.ble.sensortag.FileActivity"
            android:parentActivityName="com.att.iothub.ti.ble.sensortag.FwUpdateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.att.iothub.ti.ble.sensortag.PreferencesActivity"
            android:label="Preferences"
            android:parentActivityName="com.att.iothub.ti.ble.sensortag.DeviceActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
